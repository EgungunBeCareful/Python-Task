    "#import modules \n",
    "\n",
    "import random    #generating random characters\n",
    "import pandas as pd  #dataframes for manipulating data\n",
    "\n",
    "\n",
    "#Get details from new users\n",
    "print(\"Congratulations! - Welcome to HNG TECH, let's get you onboard!\")\n",
    "\n",
    "def get_details():\n",
    "    first_name = str(input(\"First Name: \\n\")).upper()\n",
    "    last_name = str(input(\"Last Name: \\n\")).upper()\n",
    "    email = str(input(\"Email: \\n\"))\n",
    "\n",
    "    details = [first_name, last_name, email]\n",
    "    \n",
    "    return details\n",
    "\n",
    "\n",
    "#slicing also combine first two letters of first name and last two letters of last name\n",
    "\n",
    "def gen_password(details):\n",
    "    \n",
    "    scrap = \"abcdefghijklmnopqrstuvwxyz01234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^&*()?\"\n",
    "    passlen = 5\n",
    "    suffix =  \"\".join(random.sample(scrap,passlen))\n",
    "    \n",
    "    password = str(details[0][:2] + details[1][-2:] + suffix)\n",
    "    \n",
    "    return password\n",
    "\n",
    "# Confirm if user approves password or prompt to create a new one\n",
    "\n",
    "approval = True\n",
    "container = []\n",
    "\n",
    "while approval:\n",
    "    \n",
    "    #get user details\n",
    "    details = get_details()\n",
    "    \n",
    "    #display generated password\n",
    "    password = gen_password(details)\n",
    "    print(\"Your password is: \" + str(password)) \n",
    "    \n",
    "    #confirm user's approval\n",
    "    user_validation = input(str(\"Are you okay with password? Type '1' if you accept the password or type '0' to create a new one: \"))\n",
    "    \n",
    "    password_loop = True\n",
    "    \n",
    "    while password_loop:\n",
    "        \n",
    "        if user_validation == '1':\n",
    "            #attach password to user details\n",
    "            details.append(password)\n",
    "            \n",
    "            #attach all details to the container\n",
    "            container.append(details)\n",
    "            \n",
    "            password_loop = False;\n",
    "    \n",
    "        else:\n",
    "            alt_password = input(str(\"Create a password equal or greater than 7 characters: \"))\n",
    "            \n",
    "            #add password length\n",
    "            password_len = True\n",
    "            \n",
    "            while password_len:\n",
    "                \n",
    "                if len(alt_password) >= 7:\n",
    "                    #attach alternative password to user details\n",
    "                    details.append(alt_password)\n",
    "            \n",
    "                    #attach all details to the container\n",
    "                    container.append(details)\n",
    "                    \n",
    "                    #break from the loop to get password of certain length\n",
    "                    password_len = False\n",
    "                    \n",
    "                    #break from the password loop\n",
    "                    password_loop = False\n",
    "                \n",
    "                else: \n",
    "                    \n",
    "                    alt_password = input(str(\"Your password needs to be equal or greater than 7 characters: \"))\n",
    "                    print(\"\\nThanks Buddie, Your details have been received!\")\n",
    "            \n",
    "        #Get details of new user\n",
    "        next_user = input(str(\"Do you want to enter a new user? Type '1' for Yes or Type '0' for No: \\n\"))\n",
    "        \n",
    "        if (next_user == \"0\"):\n",
    "            \n",
    "            approval = False\n",
    "                \n",
    "             #using DataFrame to create a table format for the data stored in containers
    "            user_HNG = pd.DataFrame(container, columns=['FIRSTNAME', 'LASTNAME', 'EMAIL', 'PASSWORD'], dtype = float) \n",
    "            print(user_HNG) \n",
    "                \n",
    "        else:\n",
    "            \n",
    "            approval = True"
   ]
  }
